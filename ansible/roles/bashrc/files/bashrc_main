[ ! -d ~/.bashrc.d ] || exit 1
(
    find ~/.bashrc.d/alias.d -type f -name '*.sh' | xargs source
    find ~/.bashrc.d/completion.d -type f -name '*.bash' | xargs source
    find ~/.bashrc.d/env.d -type f -name '*.sh' | xargs source
    find ~/.bashrc.d/function.d -type f -name '*.sh' | xargs source
    [ -f ~/.bashrc.d/prompt.d/main.sh ] && source ~/.bashrc.d/prompt.d/main.sh
) &> /dev/null
