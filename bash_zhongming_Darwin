# Git auto-complete bash
if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

# Nice display of git status
if [ -f "$(brew --prefix)/opt/bash-git-prompt/share/gitprompt.sh" ]; then
    source "$(brew --prefix)/opt/bash-git-prompt/share/gitprompt.sh"
fi

export PATH=~/bin:~/opt/bin:$PATH

export PS1="\\w:\$(git branch 2>/dev/null | grep '^*' | colrm 1 2)\$ "

# Fast editing my bash
alias eb="vim ~/.bash_zhongming"
alias sb="source ~/.bash_zhongming"

alias l="ls -GF"
alias ls="ls -aGF"
alias ll="ls -alGF"
alias ctagscpp="ctags --c++-kinds=+p --fields=+iaS --extra=+q"

alias ..="cd ..;"
alias up="cd ..;"

# For Android Studio
export ANDROID_NDK_HOME=~/bin/android-ndk-r10d
launchctl setenv ANDROID_NDK_HOME "$ANDROID_NDK_HOME"

export ANDROID_HOME=~/Library/Android/sdk
launchctl setenv ANDROID_HOME "$ANDROID_HOME"

export PATH=$ANDROID_NDK_HOME/tools:$ANDROID_HOME/platform-tools:$PATH

# Unmount evething in ~/dev/
alias unmountalldev="find ~/dev -type d | xargs umount -f"
